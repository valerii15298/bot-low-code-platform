{
  "name": "api",
  "version": "0.0.1",
  "description": "",
  "author": "",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "schema:emit": "ts-node .\\scripts\\generateSchemaSDL.ts",
    "dev": "pnpm start:dev",
    "prod": "pnpm start:prod",
    "prebuild": "rimraf dist",
    "build": "pnpm exec prisma generate && pnpm exec prisma migrate deploy && nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main.js",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json"
  },
  "dependencies": {
    "@apollo/federation": "^0.29.1",
    "@apollo/gateway": "^0.38.2",
    "@nestjs/common": "^8.4.3",
    "@nestjs/core": "^8.4.3",
    "@nestjs/graphql": "^9.1.2",
    "@nestjs/platform-express": "^8.4.3",
    "@nestjs/serve-static": "^2.2.2",
    "@prisma/client": "^3.11.1",
    "apollo-graphql": "^0.9.6",
    "apollo-server-express": "^3.6.7",
    "class-transformer": "^0.4.0",
    "class-validator": "^0.13.2",
    "express": "^4.17.3",
    "express-http-proxy": "^1.6.3",
    "graphql": "^15.8.0",
    "graphql-fields": "^2.0.3",
    "graphql-redis-subscriptions": "^2.4.2",
    "graphql-scalars": "^1.17.0",
    "graphql-subscriptions": "^2.0.0",
    "graphql-tag": "^2.12.6",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^3.0.2",
    "rxjs": "^7.5.5",
    "tslib": "^2.3.1",
    "type-graphql": "^1.1.1",
    "typegraphql-nestjs": "^0.4.1"
  },
  "devDependencies": {
    "@nestjs/cli": "^8.2.4",
    "@nestjs/schematics": "^8.0.8",
    "@nestjs/testing": "^8.4.3",
    "@types/express": "^4.17.13",
    "@types/express-http-proxy": "^1.6.3",
    "@types/graphql-fields": "^1.3.4",
    "@types/jest": "27.4.0",
    "@types/node": "^17.0.23",
    "@types/supertest": "^2.0.12",
    "@typescript-eslint/eslint-plugin": "^5.17.0",
    "@typescript-eslint/parser": "^5.17.0",
    "eslint": "^8.12.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.0.0",
    "jest": "^27.5.1",
    "prettier": "^2.6.1",
    "prisma": "~3.11.0",
    "source-map-support": "^0.5.21",
    "supertest": "^6.2.2",
    "ts-jest": "^27.1.4",
    "ts-loader": "^9.2.8",
    "ts-node": "^10.7.0",
    "tsconfig-paths": "^3.14.1",
    "typegraphql-prisma": "^0.19.2",
    "typescript": "^4.6.3",
    "webpack": "^5.70.0"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
